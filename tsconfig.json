{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ES6"],
    "types": ["cypress", "jest", "node"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "cypress/**/*.ts",
    "cypress/**/*.d.ts",
    "cypress/support/index.d.ts",
    "src/**/*",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
